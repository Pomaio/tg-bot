# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 2
end_of_line = lf
quote_type = single
insert_final_newline = true
trim_trailing_whitespace = true
trailingComma = "es5"
semi = false

[*.json]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
